#include <iostream>
using namespace std;

#define MAX 100

class Stack {
    int arr[MAX];
    int top;
public:
    Stack() { top = -1; }

    bool isEmpty() {
        if (top == -1) {
            return true;
        } else {
            return false;
        }
    }

    bool isFull() {
        if (top == MAX - 1) {
            return true;
        } else {
            return false;
        }
    }

    void push(int x) {
        if (isFull()) {
            cout << "Stack is full.\n";
        } else {
            arr[++top] = x;
            cout << "Pushed " << x << " into stack.\n";
        }
    }

    void pop() {
        if (isEmpty()) {
            cout << "Stack is empty.\n";
        } else {
            int x = arr[top--];
            cout << "Popped " << x << " from stack.\n";
        }
    }

    void peek() {
        if (isEmpty()) {
            cout << "Stack is empty.\n";
        } else {
            cout << "Top of stack: " << arr[top] << endl;
        }
    }

    void display() {
        if (isEmpty()) {
            cout << "Stack is empty.\n";
        } else {
            cout << "Stack contents: ";
            for (int i = top; i >= 0; i--) {
                cout << arr[i] << " ";
            }
            cout << endl;
        }
    }
};

int main() {
    Stack s;
    int choice, val;
    while (true) {
        cout << "\n1. Push\n2. Pop\n3. Peek\n4. isEmpty\n5. isFull\n6. Display\n7. Exit\n";
        cout << "Enter choice: ";
        cin >> choice;
        if (choice == 1) {
            cout << "Enter value: ";
            cin >> val;
            s.push(val);
        } else if (choice == 2) {
            s.pop();
        } else if (choice == 3) {
            s.peek();
        } else if (choice == 4) {
            if (s.isEmpty()) {
                cout << "Stack is empty.\n";
            } else {
                cout << "Stack is not empty.\n";
            }
        } else if (choice == 5) {
            if (s.isFull()) {
                cout << "Stack is full.\n";
            } else {
                cout << "Stack is not full.\n";
            }
        } else if (choice == 6) {
            s.display();
        } else if (choice == 7) {
            break;
        } else {
            cout << "Invalid choice.\n";
        }
    }
    return 0;
}
